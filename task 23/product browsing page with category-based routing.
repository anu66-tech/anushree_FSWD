import { useState } from "react";

function App() {
  const [category, setCategory] = useState("All");

  const products = [
    { id: 1, name: "Laptop", category: "Electronics" },
    { id: 2, name: "Mobile Phone", category: "Electronics" },
    { id: 3, name: "T-Shirt", category: "Clothing" },
    { id: 4, name: "Jeans", category: "Clothing" },
    { id: 5, name: "Novel Book", category: "Books" },
    { id: 6, name: "Notebook", category: "Books" }
  ];

  const filteredProducts =
    category === "All"
      ? products
      : products.filter((p) => p.category === category);

  return (
    <div style={styles.container}>
      <h2>üõçÔ∏è Product Browsing</h2>

      {/* Category Navigation */}
      <div style={styles.nav}>
        <button onClick={() => setCategory("All")} style={styles.btn}>
          All
        </button>
        <button onClick={() => setCategory("Electronics")} style={styles.btn}>
          Electronics
        </button>
        <button onClick={() => setCategory("Clothing")} style={styles.btn}>
          Clothing
        </button>
        <button onClick={() => setCategory("Books")} style={styles.btn}>
          Books
        </button>
      </div>

      {/* Product List */}
      <div style={styles.list}>
        {filteredProducts.length === 0 && <p>No products available</p>}

        {filteredProducts.map((p) => (
          <div key={p.id} style={styles.card}>
            <h4>{p.name}</h4>
            <p>{p.category}</p>
          </div>
        ))}
      </div>
    </div>
  );
}

const styles = {
  container: {
    fontFamily: "Arial",
    padding: "20px",
    maxWidth: "700px",
    margin: "auto",
    textAlign: "center"
  },
  nav: {
    marginBottom: "20px"
  },
  btn: {
    margin: "5px",
    padding: "10px 15px",
    border: "none",
    borderRadius: "5px",
    backgroundColor: "#28a745",
    color: "white",
    cursor: "pointer"
  },
  list: {
    display: "flex",
    flexWrap: "wrap",
    gap: "15px",
    justifyContent: "center"
  },
  card: {
    border: "1px solid #ddd",
    padding: "15px",
    width: "150px",
    borderRadius: "8px",
    backgroundColor: "#f9f9f9"
  }
};

export default App;
